generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(50)
  email    String  @unique
  password String
  avatar   String?
  roleId   Int
  role     Role    @relation(fields: [roleId], references: [id])
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user User[]
}
